<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:stretchColumns="1">
    <TableRow>
        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:textColor="#FFFFFF"
            android:text="Open..." />
        <TextView
            android:gravity="right"
            android:padding="3dp"
            android:textColor="#FFFFFF"
            android:text="Ctrl-O" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:textColor="#FFFFFF"
            android:text="Save..." />
        <TextView
            android:gravity="right"
            android:padding="3dp"
            android:textColor="#FFFFFF"
            android:text="Ctrl-S" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:padding="3dp"
            android:textColor="#FFFFFF"
            android:text="Save as" />
        <TextView
            android:gravity="right"
            android:padding="3dp"
            android:textColor="#FFFFFF"
            android:text="Ctrl-Shift-S" />
    </TableRow>
    <View
        android:layout_height="2dp"
        android:background="#FFFFFF" />
    <TableRow>
        <TextView
            android:text="X"
            android:textColor="#FFFFFF"
            android:padding="3dp" />
        <TextView
            android:text="Import…"
            android:textColor="#FFFFFF"
            android:padding="3dp" />
    </TableRow>
    <TableRow>
        <TextView
            android:text="X"
            android:textColor="#FFFFFF"
            android:padding="3dp" />
        <TextView
            android:text="Emport…"
            android:textColor="#FFFFFF"
            android:padding="3dp" />
        <TextView
            android:text="Ctrl-E"
            android:textColor="#FFFFFF"
            android:gravity="right"
            android:padding="3dp" />
    </TableRow>
    <View
        android:layout_height="2dp"
        android:background="#FFFFFF"/>
    <TableRow>
        <TextView
            android:textColor="#FFFFFF"
            android:layout_column="1"
            android:text="Quit"
            android:padding="3dp" />
    </TableRow>
</TableLayout>
